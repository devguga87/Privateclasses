{% extends 'layout.njk' %}
{% block title %}
    <title>Private Classes - teachers form</title>
{% endblock title %}
{% block content %}
<form class="card" method="POST" action="/teachers">
    <section class="image" style="background:url(https://source.unsplash.com/collection/8684183/500x500) no-repeat center center / cover">
    </section>
    <section class="details">
    
    <div class="item">
        <div>Avatar url</div>
        <div>
            <input type="url" name="avatar_url" id="" placeholder="https://">
        </div>
    </div>
    
    <div class="item">
        <div>Nome</div>
        <div>
            <input type="text" name="name" id="" placeholder="Seu nome aqui">
        </div>
    </div>
    
    <div class="item">
        <div>Idade</div>
        <div>
            <input type="date" name="birth" id="">
        </div>
    </div>
    
    <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
            <select name="escolarity" id="">
                <option value="valor1">Ensino médio</option>
                <option value="valor2">Ensino superior</option>
                <option value="valor3">Mestrado</option>
                <option value="valor4">Doutorado</option>
            </select>
        </div>
    </div>
    
    <div class="item">
        <div>Tipo de aula</div>
        <div>
            <span><input type="radio" value="P" name="type" id="" checked>Presencial</span>
            <span><input type="radio" value="D" name="type" id="">À distância</span>
        </div>
    </div>
    
    <div class="item">
        <div>Acompanhamento</div>
        <div>
            <input type="text" name="classes" id="" placeholder="Separe classes por virgula">
        </div>
    </div>
 
    <button type="submit">Salvar</button>
    </section>
</form>
{% endblock content %}